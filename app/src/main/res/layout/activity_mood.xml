<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <!-- Scrollable Content (leave bottom space so nav is visible) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:layout_marginBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/app_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/app_name"
                    android:textColor="@color/secondaryColor"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Mood Today -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Left: Mood Text + Emoji -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your mood today"
                        android:textColor="@color/secondaryColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTodaysMood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ˜Š"
                        android:textSize="36sp" />
                </LinearLayout>

                <!-- Right: Add Mood Button -->
                <Button
                    android:id="@+id/btnAddMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your mood today"
                    android:backgroundTint="@color/secondaryColor"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>

            <!-- Calendar View -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mood History (tap a date)"
                android:textColor="@color/secondaryColor"
                android:textSize="16sp" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weekNumberColor="@color/secondaryColor"
                android:focusedMonthDateColor="@color/secondaryColor"
                android:unfocusedMonthDateColor="@color/darkText"
                android:weekSeparatorLineColor="@color/secondaryColor"
                android:dateTextAppearance="@style/DarkCalendarDateText" />


            <!-- Container that shows mood entries (emoji + time + note) for selected calendar day -->
            <LinearLayout
                android:id="@+id/moodListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp" />

            <!-- Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mood Trend (last 7 days)"
                android:textColor="@color/secondaryColor"
                android:textSize="16sp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/moodChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation (anchor at bottom) -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
